{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.recipe.com/recipeUpdate.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "calories": {
      "type": "integer",
      "minimum": 0
    },
    "image": {
      "type": "string",
      "minimum": 0
    },
    "ingredients": {
      "type": "string",
      "minimum": 0
    },
    "source": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "title"
  ]
}